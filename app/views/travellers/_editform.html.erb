<%= form_for @traveller do |f| %>

<p>
 <%= f.label :image %>
 <%= f.text_field :image, :required => false %>
</p>

<p>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, :required => true %>
</p>

<p>
  <%= f.label :last_name %>
  <%= f.text_field :last_name, :required => true %>
</p>

<p>
  <%= f.label :email %>
  <%= f.email_field :email, :required => true %>
</p>

<p>
  <%= f.label :password %>
  <%= f.password_field :password, :required => true %>
</p>

<p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true %>
</p>


<p>
 <%= f.label :dob %>
 <%= f.date_field :dob, :required => false %>
</p>

<p>
 <%= f.label :phone %>
 <%= f.text_field :phone, :required => false %>
</p>

<p>
 <%= f.label :city %>
 <%= f.text_field :city, :required => false %>
</p>

<p>
 <%= f.label :country %>
 <%= f.text_field :country, :required => false %>
</p>

<!-- <p>
 <%= f.label :location %>
 <%= f.text_field :location, :required => true %>
</p> -->

<p>
 <%= f.label :fav_winery %>
 <%= f.text_field :fav_winery, :required => false %>
</p>

<p>
 <%= f.label :fav_region %>
 <%= f.text_field :fav_region, :required => false %>
</p>

<%= f.submit %>
<% end %>
