<h3>Login</h3>

<div class="formtext">
  <div class="formtext-background"></div>
<%= form_tag login_path do %>
<p>
  <%= label_tag :email %>
  <%= email_field_tag :email, "", :required => true %>
</p>

<p>
  <%= label_tag :password %>
  <%= password_field_tag :password, "", :required => true %>
</p>

<%= submit_tag "Login" %>

<% end %>
</div>
